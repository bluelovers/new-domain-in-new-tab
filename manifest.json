{
  "manifest_version": 2,

  "name": "New Domain in New Tab",
  "description": "Open links to new domains in a new tab. Configurable.",
  "version": "1.0",
  "options_page": "options.html",

  "permissions":
  [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "contextMenus"
  ],

  "background":
  {
      "scripts": ["background.js"]
  },

  "icons":
  {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "32": "icons/icon32.png",
      "38": "icons/icon38.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
  },

  "browser_action": {}
}